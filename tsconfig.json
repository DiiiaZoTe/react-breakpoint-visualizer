{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": ".",
    "jsx": "react",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "es6",
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
  ],
  "exclude": ["node_modules", "dist"]
}